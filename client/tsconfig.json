{
    "compilerOptions": {
      "incremental": true,
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "plugins": [
        {
          "name": "typescript-plugin-css-modules"
        }
      ],
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
    "include": [
      "**/src/**/*.ts",
      "./config/jest/setupTests.ts",
      "**/src/**/*.tsx"
    ]
}